<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Application logs - INFO to see important trading events -->
    <logger name="com.turkninja" level="INFO" />
    <logger name="com.turkninja.engine.optimizer" level="INFO" />
    <logger name="com.turkninja.OptimizerRunner" level="INFO" />
</configuration>
