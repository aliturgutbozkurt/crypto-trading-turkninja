<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="1200.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.turkninja.ui.DashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
         <children>
            <Label text="Crypto Trading Bot" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
            <Label fx:id="totalBalanceLabel" text="Balance: $0.00" textFill="#2ecc71">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <Label fx:id="pnlLabel" text="PnL: $0.00" textFill="WHITE">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <Label fx:id="dailyPnlLabel" text="Daily: $0.00" textFill="#f39c12">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox spacing="10.0" style="-fx-padding: 10;">
         <children>
            <Label text="Active Positions">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <TableView fx:id="positionsTable" prefHeight="800.0" prefWidth="400.0" VBox.vgrow="ALWAYS" style="-fx-font-size: 16px;">
              <columns>
                <TableColumn fx:id="symbolColumn" prefWidth="200.0" text="Symbol" />
                <TableColumn fx:id="sideColumn" prefWidth="160.0" text="Side" />
                <TableColumn fx:id="positionSizeColumn" prefWidth="200.0" text="Size (USDT)" />
                <TableColumn fx:id="balancePercentColumn" prefWidth="200.0" text="Balance %" />
                <TableColumn fx:id="entryPriceColumn" prefWidth="200.0" text="Entry Price" />
                <TableColumn fx:id="currentPriceColumn" prefWidth="200.0" text="Current Price" />
                <TableColumn fx:id="pnlColumn" prefWidth="200.0" text="PnL ($)" />
                <TableColumn fx:id="roiColumn" prefWidth="200.0" text="ROI %" />
                <TableColumn fx:id="actionColumn" prefWidth="200.0" text="Action" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 10; -fx-background-color: #ecf0f1;">
         <children>
            <Label fx:id="statusLabel" text="System: Initializing..." textFill="#7f8c8d" />
            <Button fx:id="viewHistoryButton" mnemonicParsing="false" onAction="#onViewHistory" style="-fx-background-color: #9b59b6;" text="VIEW TRADE HISTORY" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Button>
            <Button fx:id="reloadPositionsButton" mnemonicParsing="false" onAction="#onReloadPositions" style="-fx-background-color: #3498db;" text="RELOAD POSITIONS" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Button>
            <Button fx:id="emergencyExitButton" mnemonicParsing="false" onAction="#onEmergencyExit" style="-fx-background-color: #e74c3c;" text="EMERGENCY EXIT ALL" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
